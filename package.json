{
  "name": "queue-sim",
  "version": "1.0.0",
  "description": "Distributed matchmaking queue simulation",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "gateway": "ts-node --transpile-only src/gateway/server.ts",
    "matchmaker": "ts-node --transpile-only src/matchmaker/worker.ts",
    "session": "ts-node --transpile-only src/session/runner.ts",
    "dashboard": "ts-node --transpile-only src/dashboard/server.ts",
    "autoscaler": "ts-node --transpile-only src/scripts/proxmox_autoscaler.ts",
    "reaper": "ts-node --transpile-only src/scripts/reap_stale_players.ts",
    "register-sessions": "ts-node --transpile-only src/scripts/register_sessions.ts",
    "dev:gateway": "ts-node-dev --respawn --transpile-only src/gateway/server.ts",
    "dev:matchmaker": "ts-node-dev --respawn --transpile-only src/matchmaker/worker.ts",
    "dev:session": "ts-node-dev --respawn --transpile-only src/session/runner.ts",
    "dev:dashboard": "ts-node-dev --respawn --transpile-only src/dashboard/server.ts"
  },
  "dependencies": {
    "express": "^4.22.1",
    "ioredis": "^5.9.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "@types/ws": "^8.18.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
